<style>
.pagination {
  margin-top: 20px;
  margin-bottom: 10px;
}

.pagination .page-link {
  color: #333;
  border: 1px solid #ddd;
  margin: 0 3px;
}

.pagination .page-link:hover {
  background-color: #f8f9fa;
  border-color: #aaa;
}

.pagination .active .page-link {
  background-color: #007bff;
  border-color: #007bff;
  color: #fff;
}

</style>

<div class="container" id="product-review-wrapper">
  {% if reviews %}
    {% for review in reviews %}
    <div class="card mb-3 p-3">
        <h5>{{ review.author }}</h5>
        <p>{{ review.text }}</p>
        <strong>Rating: {{ review.rating }}/5</strong><br />
        <small class="text-muted">{{ review.date_added }}</small>

        {% if review.filenames %}
        <div class="mt-2">
            {% for file in review.filenames %}
            <img src="image/{{ file }}" width="100" />
            {% endfor %}
        </div>
        {% endif %}
    </div>
    {% endfor %}
  {% else %}
    <h1>No Reviews!</h1>
  {% endif %}
    <div class="pagination-wrapper mt-4 d-flex justify-content-center">
        {{ pagination }}
    </div>    
</div>