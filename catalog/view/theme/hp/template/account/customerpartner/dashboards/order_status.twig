<style>
	.wk_order_status_box {
		font-size: 16px;
		padding: 0;		
		display: flex;
		justify-content: space-evenly;
		padding: 0 0 0 0;
		min-height: 51px;
    	height: 51px;
	}

	.color_complete {
		margin: 0 0 5px 0;
		border-radius: 0px;
		color: #0C5120;
		background-color: #69b572
	}

	.color_process {
		margin: 0 0 5px 0;
		border-radius: 0px;
		color: #004f78;
		background-color: #22ade2
	}

	.color_cancel {
		margin: 0 0 5px 0;
		border-radius: 0px;
		color: #b34356;
		background-color: #f37587
	}
  .c100.small {
    font-size: 50px;
    margin-bottom: 24px;
  }
  .margin_top{
    margin-top: 14px;
  }

  @media (max-width: 900px) {
    .wk_order_status_box {
      width: auto;
      margin: 0 0 9px 0;
    }
  }
</style>

<link rel="stylesheet" href="catalog/view/theme/default/stylesheet/MP/progress_bar.css">

<div class="tile" style="background-color: white;">
	<div class="tile-body" style="background-color: white;padding: 0;">
		<div id="wk_order_status_container" style="line-height: 5px;">
			
				<div class="col-md-12 col-sm-12 color_complete">
					<div class="wk_order_status_box">

						<div class="">
							<div class="margin_top">
								<center>
									<a href="{{ complete_order_link }}" style="color: black;vertical-align: -webkit-baseline-middle;line-height:1;">{{ text_order_complete }}</a>
								</center>
							</div>
						</div>

						<div class="">
							<div class="c100 p{{ totalCompletePercent }} small green">
								<span>{{ totalComplete }}/{{ totalSellerOrder }}</span>
								<div class="slice">
									<div class="bar"></div>
									<div class="fill"></div>
								</div>
							</div>
						</div>

					</div>
				</div>

				<div class="col-md-12 col-sm-12 color_process">
					<div class="wk_order_status_box">

						<div class="">
							<div class="margin_top">
								<center>
									<a href="{{ processing_order_link }}" style="color: black;vertical-align: -webkit-baseline-middle;line-height:1;">{{ text_order_processing }}</a>
								</center>
							</div>
						</div>

						<div class="">
							<div class="c100 p{{ totalProcessingPercent }} small blue">
								<span>{{ totalProcessing }}/{{ totalSellerOrder }}</span>
								<div class="slice">
									<div class="bar"></div>
									<div class="fill"></div>
								</div>
							</div>
						</div>

					</div>
				</div>

				<div class="col-md-12 col-sm-12 color_cancel">
					<div class="wk_order_status_box">

						<div class="">
							<div class="margin_top">
								<center>
									<a href="{{ cancel_order_link }}" style="color: black;vertical-align: -webkit-baseline-middle;line-height:1;">{{ text_order_cancel }}</a>
								</center>
							</div>
						</div>

						<div class="">
							<div class="c100 p{{ totalCanceledPercent }} small pink">
								<span>{{ totalCancel }}/{{ totalSellerOrder }}</span>
								<div class="slice">
									<div class="bar"></div>
									<div class="fill"></div>
								</div>
							</div>

						</div>
					</div>
				</div>


		</div>
	</div>
	<div class="tile-footer" style="background-color: #eef4f7"></div>
</div>
