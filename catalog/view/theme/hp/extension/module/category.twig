<style>
  .list-group-item:hover {
    background-color:rgb(255, 224, 162);
    color: #0d6efd;
  }

  .list-group-subitem {
    padding-left: 2rem;
    font-size: 0.95rem;
  }

  .list-group-item {
    border: none !important;
    color: #162F65;;
  }

  .list-group-item.active {
    background-color: #162F65;
    color: #f6c96d;
  }
</style>

<div class="list-group border-end border-info px-3">
  {% for category in categories %}
    {% if category.category_id == category_id %}
      <a href="{{ category.href }}" class="list-group-item active">{{ category.name }}</a>
      
      {% if category.children %}
        {% for child in category.children %}
          <a href="{{ child.href }}"
            class="list-group-item {% if child.category_id == child_id %}active{% endif %} list-group-subitem">
            <i class="fa fa-paw me-3"></i> {{ child.name }}
          </a>

        {% endfor %}
      {% endif %}
    {% else %}
      <a href="{{ category.href }}" class="list-group-item">{{ category.name }}</a>
    {% endif %}
  {% endfor %}
</div>
