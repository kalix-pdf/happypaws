<link rel="stylesheet" href="catalog/view/theme/hp/stylesheet/side-nav.css">

<div id="main-content" class="container my-5">
  <ul class="list-group">
    {% if not logged %}
    <li class="list-group-item">
      <a href="{{ login }}" class="list-group-item">{{ text_login }}</a>
      <a href="{{ register }}" class="list-group-item">{{ text_register }}</a>
      <a href="{{ forgotten }}" class="list-group-item">Forgot Password</a>
    </li>
    {% endif %}

    {% if logged %}
    <li class="list-group-item list-group-item-action btn {% if route == 'account/edit' or 
     route == 'account/password' or route == 'account/address' %}active{% endif %}">
      <a id="dropdownBtn" class="btn drop-tog">
        My Account
        <span id="dropdownIcon" class="arrow">â–¼</span>
      </a>
      <div id="customDropdown" class="custom-dropdown mt-2">
        <div class="dropdown-content">
          <a class="dropdown-item" href="{{ edit }}">{{ text_edit }}</a>
          <a class="dropdown-item" href="{{ password }}">{{ text_password }}</a>
          <a class="dropdown-item" href="{{ address }}">{{ text_address }}</a>
        </div>
      </div>
    </li>
    {% endif %}

    <li id="list-content" class="list-group-item list-group-item-action {% if route == 'account/account' %}active text-white{% endif %}">
      <a class="btn" href="{{ account }}">
        My Purchase
      </a>
    </li>
    <li id="list-content" class="list-group-item list-group-item-action ">
      {{ sellmenu }}
    </li>
    <li id="list-content" class="list-group-item list-group-item-action {% if route == 'account/wishlist' %}active text-white{% endif %}">
      <a class="btn" href="{{ wishlist }}">
        {{ text_wishlist }}
      </a>
    </li>
     <li id="list-content" class="list-group-item list-group-item-action {% if route == 'account/order' or route == 'account/order/info' %}active text-white{% endif %}">
      <a class="btn" href="{{ order }}">
        {{ text_order }}
      </a>
    </li>
    <li id="list-content" class="list-group-item list-group-item-action {% if route == 'account/transaction' %}active text-white{% endif %}">
      <a class="btn" href="{{ transaction }}">
        {{ text_transaction }}
      </a>
    </li>

    {% if logged %}
    <li id="list-content" class="list-group-item list-group-item-action">
      <a href="{{ logout }}" class="btn">{{ text_logout }}</a>
    </li>
    {% endif %}
  </ul>
</div>

<script>
  const btn = document.getElementById('dropdownBtn');
  const dropdown = document.getElementById('customDropdown');
  const icon = document.getElementById('dropdownIcon');

  btn.addEventListener('click', () => {
    dropdown.classList.toggle('show');
    icon.classList.toggle('rotate');
  });

  document.addEventListener('click', (e) => {
    if (!btn.contains(e.target) && !dropdown.contains(e.target)) {
      dropdown.classList.remove('show');
      icon.classList.remove('rotate');
    }
  });

</script>