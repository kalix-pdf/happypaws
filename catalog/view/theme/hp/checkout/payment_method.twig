{% if error_warning %}
  <div class="alert alert-warning alert-dismissible">
    <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
  </div>
{% endif %}

{% if payment_methods %}
  <div class="form-group">
    <p class="mb-2">{{ text_payment_method }}</p>

    {% for payment_method in payment_methods %}
      <div class="form-check mb-2">
        <input 
          class="form-check-input" 
          type="radio" 
          name="payment_method" 
          id="payment_{{ payment_method.code }}" 
          value="{{ payment_method.code }}"
          {% if loop.first %}checked="checked"{% endif %}
        />
        <label class="form-check-label" for="payment_{{ payment_method.code }}">
          {{ payment_method.title }}
          {# Uncomment if you want to show terms:
          {% if payment_method.terms %}
            <small class="d-block text-muted">({{ payment_method.terms }})</small>
          {% endif %} #}
        </label>
      </div>
    {% endfor %}
  </div>
{% endif %}

