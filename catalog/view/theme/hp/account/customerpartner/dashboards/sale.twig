<style type="text/css">
	.popover {
		color: #666;
		z-index:9999;
		width:100%;
	}
</style>
<div class="tile tile-primary" id="tab-sales-wk">
	<div class="tile-heading">{{ heading_title }}
		<span class="pull-right">
			{% if percentage > 0 %}
				<i class="fa fa-caret-up"></i>
			{% elseif percentage < 0 %}
				<i class="fa fa-caret-down"></i>
			{% endif %}
			{{ percentage }}%</span>
	</div>
	<div class="tile-body">
		<i class="fa fa-credit-card"></i>
		<h2 class="pull-right" id="popover" data-toggle="popover" data-trigger="hover">{{ total }}</h2>
	</div>
	<div class="tile-footer">
		<a href="{{ sale }}">{{ text_view }}</a>
	</div>
</div>

<script type="text/javascript">
	$('#toggle-order').on('click', function () {
		
    	$('a[href="#tab-order"]').trigger('click');
  	});

jQuery(document).ready(function () {
  $(document).find('#tab-sales-wk').parent().css('z-index','9');
  var html = '';
  html += '<table class="table table-responsive table-bordered table-striped">';
  html += '<tr><td>Admin Charges</td><td> {{ admin_amount }}</td></tr>';
  html += '<tr><td>Paid Balance</td><td> {{ paid_amount }}</td></tr>';
  html += '<tr><td>Payable Balance</td><td> {{ payable_amount }}</td></tr>';
  html += '<tr><td>Total Sale</td><td> {{ total }}</td></tr>';
  html += '</table>';

  $('#popover').popover({
	html: true,
	sanitize : false,
	placement: 'bottom',
    title: '{{heading_title}}',
    content: html,
	});
});
</script>
