<link href="catalog/view/theme/hp/stylesheet/style.css" rel="stylesheet">

{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="catalog/view/javascript/common.js" type="text/javascript"></script>
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}  
</head>
<body>

<nav class="navbar navbar-expand-lg py-3" id="header">
  <div class="container">
    <div class="navbar-brand" style="width: 180px; height: auto;">
      {% if logo %}
        <a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-fluid" /></a>
      {% else %}
        <h1><a href="{{ home }}">{{ name }}</a></h1>
      {% endif %}
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="{{ contact }}"><i class="fa fa-phone"></i>
          <span class="hide-on-mobile">{{ telephone }}</span></a>
        </li>
        {# <li class="nav-item"><a class="nav-link">{{ sellmenu }}</a></li> #}
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="{{ account }}" title="{{ text_account }}" 
          role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="hide-on-mobile">{{ name }}</span>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            {% if logged %}
            <li><a class="dropdown-item" href="{{ account }}">{{ text_account }}</a></li>
            <li><a class="dropdown-item" href="{{ edit }}">Edit Profile</a></li>
            <li><a class="dropdown-item" href="{{ transaction }}">{{ text_transaction }}</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="{{ logout }}">{{ text_logout }}</a></li>
            {% else %}
            <li><a class="dropdown-item" href="{{ register }}">{{ text_register }}</a></li>
            <li><a class="dropdown-item" href="{{ login }}">{{ text_login }}</a></li>
            {% endif %}
          </ul>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ shopping_cart }}" title="{{ text_shopping_cart }}">
            <i class="fa fa-shopping-cart"></i>
            <span class="hide-on-mobile">{{ text_shopping_cart }}</span>
          </a>
        </li>
        
        <li class="nav-item">
          <a class="nav-link" href="{{ checkout }}" title="{{ text_checkout }}">
            <i class="fa fa-share"></i>
            <span class="hide-on-mobile">{{ text_checkout }}</span>
          </a>
        </li>
      </ul>
      
    </div>
  </div>
</nav>

